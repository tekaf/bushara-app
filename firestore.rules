rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Invites
    match /invites/{inviteId} {
      // Allow read if user is the owner
      allow read: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      
      // Allow create if user sets themselves as owner
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      
      // Allow update/delete if user is the owner
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      
      // Public read for active invites (for public invite page)
      allow read: if resource.data.status == 'active';
      
      // Guests subcollection
      match /guests/{guestId} {
        // Allow read for authenticated users (for check-in)
        allow read: if isAuthenticated();
        
        // Allow write only if user owns the invite
        allow write: if isAuthenticated() && 
          get(/databases/$(database)/documents/invites/$(inviteId)).data.ownerId == request.auth.uid;
      }
    }
    
    // Payments
    match /payments/{paymentId} {
      // Users can only read/write their own payments
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow create if user sets themselves as userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Check-in logs
    match /checkin_logs/{logId} {
      // Allow read for authenticated users
      allow read: if isAuthenticated();
      
      // Allow create for authenticated users
      allow create: if isAuthenticated() && request.resource.data.staffUserId == request.auth.uid;
    }
    
    // Templates - public read, authenticated write
    match /templates/{templateId} {
      // Allow public read (for viewing templates)
      allow read: if true;
      
      // Allow authenticated users to create/update/delete templates
      allow write: if isAuthenticated();
    }
  }
}

